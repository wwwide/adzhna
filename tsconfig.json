{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
//    "lib": ["es5", "es2015", "dom"],
    "baseUrl": "./",
    "paths": {
      "theme": ["./src/theme"],
//      "hooks/*": ["./src/hooks/*"],
//      "service": ["./src/service"],
//      "service/*": ["./src/service/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "debug"
  ]
}
